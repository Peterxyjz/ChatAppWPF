<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="400" Width="600">
    <Grid>
        <TextBox Name="ChatBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                 Height="300" Margin="10" IsReadOnly="True" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"/>
        <TextBox Name="MessageBox" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
                 Height="30" Margin="10,0,90,10" TextWrapping="Wrap"/>
        <Button Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Width="80" Height="30" Margin="0,0,10,10" Click="SendButton_Click"/>
    </Grid>
</Window>
